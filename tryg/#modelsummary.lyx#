\begin_layout Standard
The generative process:
\end_layout

\begin_layout Itemize
\begin_inset Formula $T^{c}\sim\mathrm{Categorical}(\pi)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $Z_{n}^{c}\sim\mathcal{N}\left(\mathcal{\mu}_{T^{c},n},\sigma_{T^{c},n}^{2}I\right)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\lambda_{g}^{c}=f_{g}\left(\sum_{i}h_{g,t_{i}(T^{c})}(Z_{t_{i}(T^{c})})\right)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $X_{g}^{c}\sim r(\cdot;\lambda_{g}^{c})$
\end_inset


\end_layout

\begin_layout Standard
The (amortized) variational family
\end_layout

\begin_layout Itemize
\begin_inset Formula $Z_{n}^{c}\sim\mathcal{N}\left(\tilde{\mu}_{n}(x^{c}),\tilde{\sigma}_{n}^{2}(x^{c})I\right)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $T^{c}\sim\mathrm{Categorical}\left(\tilde{\pi}\left(x\right)\right)$
\end_inset

 (in particular, structured so that the distribution of 
\begin_inset Formula $t_{i}(T^{c})$
\end_inset

 depends on 
\begin_inset Formula $x$
\end_inset

 only through 
\begin_inset Formula $\tilde{\mu}_{t_{0}(T^{c})}(x^{c})\cdots\tilde{\mu}_{t_{i-1}(T^{c})}(x^{c})$
\end_inset

)
\end_layout

\begin_layout Standard
We then do variational inference and learning upon the variables 
\begin_inset Formula $T^{c},Z_{t_{0}(T^{c})}^{c},Z_{t_{1}(T^{c})}^{c},\cdots$
\end_inset

.
 Note that this is slightly different from doing inference on the variables
 
\begin_inset Formula $T^{c}$
\end_inset

 and all the 
\begin_inset Formula $\left\{ Z_{n}\right\} $
\end_inset

, in that we are implicitly marginalizing out the inactive nodes.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathcal{L} & =\mathbb{E}_{q}\left[\log p(T,X,Z_{t_{0}(T)},Z_{t_{1}(T)},\cdots)\right]-\mathbb{E}_{q}\left[\log q(Z,Z_{t_{0}(T)},Z_{t_{1}(T)},\cdots)\right]\\
 & =-D(\tilde{\pi}|\pi)-\left(\sum_{t}\tilde{\pi}_{t}\sum_{i}D\left(\tilde{\mu}_{t_{i}(t)},\tilde{\sigma}_{t_{i}(t)}^{2}||\mu_{t,t_{i}(t)},\sigma_{t,t_{i}(t)}^{2}\right)\right)+\sum_{t}\tilde{\pi}_{t}\mathbb{E}_{q}\left[\log r(X;\lambda(t,Z))\right]\\
 & \approx-D(\tilde{\pi}|\pi)-\left(\sum_{t}\tilde{\pi}_{t}\sum_{i}D\left(\tilde{\mu}_{t_{i}(t)},\tilde{\sigma}_{t_{i}(t)}^{2}||\mu_{t,t_{i}(t)},\sigma_{t,t_{i}(t)}^{2}\right)\right)+\sum_{t}\tilde{\pi}_{t}\log r(X;\lambda(t,Z))
\end{align*}

\end_inset


\end_layout

